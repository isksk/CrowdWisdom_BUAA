<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/publish_title"
        android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:background="#0078d8"
        android:gravity="center"
        android:text="发布新鲜事"
        android:layout_marginBottom="10sp"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    
    <ScrollView
        android:layout_below="@+id/publish_title" 
        android:layout_height="match_parent"
        android:layout_width="match_parent" 		
		android:paddingBottom="16dp"
        >
        
	    <RelativeLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent" 	               
	        >
		    <LinearLayout
		        android:id="@+id/publish_type_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
		        >
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="类型:"
			        android:textSize="20dp"
		        />
		       	<Spinner 
		       	   android:id="@+id/publish_newstype"   
		           android:layout_width="fill_parent"
			       android:layout_height="35dp"
			       android:padding="5dp"
		           android:background="@drawable/input_border"
		           android:layout_marginLeft="15dp">		       	    
		       	</Spinner>  
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/publish_title_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_below="@+id/publish_type_layout"
		        android:layout_marginTop="16dp"
		        android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
		        >
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="标题:"
			        android:textSize="20dp"/>
		        <EditText 
		            android:id="@+id/publish_newstitle"
		            android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:padding="5dp"
			        android:layout_marginTop="16dp"
		            android:background="@drawable/input_border"
		            />
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/publish_content_layout"
		        android:layout_below="@+id/publish_title_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"	
		        android:layout_marginTop="16dp"	  
		        android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"      
		        >
		        <TextView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"		     
			        android:text="内容:"
			        android:textSize="20dp"/>
		        <EditText 
		            android:id="@+id/publish_newscontent"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/input_border"
			        android:gravity="top|left"
			        android:minLines="5"
			        android:padding="5dp"
			        android:singleLine="false" 
			        android:layout_marginTop="16dp"
		            />
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/publish_image_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:layout_marginTop="16dp"
		        android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
		        android:layout_below="@+id/publish_content_layout"
		        >
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="图片:"
		            android:textSize="20dp"/>
		        <Button 
		            android:id="@+id/publish_picbutton"
		            android:layout_width="45dp"
		            android:layout_height="40dp"		           
		            android:layout_marginLeft="50dp"
		            android:background="@drawable/camera"
		            android:clickable="true"/>
		        <Button 
		            android:id="@+id/publish_picrepository"
		            android:layout_width="45dp"
		            android:layout_height="40dp"
		            android:layout_marginLeft="40dp"
		            android:background="@drawable/folder"
		            android:clickable="true"/>
		        
		    </LinearLayout>
		    <ImageView 
		        android:id="@+id/publish_imageview"
		        android:layout_below="@+id/publish_image_layout"		        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="16dp"
		        android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
		        />
		    <Button
		        android:id="@+id/publish_finish"
		        android:layout_below="@+id/publish_imageview"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:gravity="center"		        
		        android:text="发布"
		        android:layout_marginTop="16dp"
		        android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
		        android:background="@drawable/button_bg"/>
	    </RelativeLayout>
    </ScrollView>
</RelativeLayout>