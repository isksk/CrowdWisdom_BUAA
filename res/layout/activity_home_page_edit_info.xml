<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"> 
    <TextView
        android:id="@+id/homepage_editinfo"
        android:layout_width="fill_parent"
	    android:layout_height="55dp"
	    android:background="#0078d8"
        android:gravity="center"
        android:text="编辑个人信息"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
	        <LinearLayout 
	            android:layout_width="match_parent"
	        	android:layout_height="match_parent"
	        	android:orientation="vertical"
	        	android:padding="16dp"
	            >
			    <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal" >
			         <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_marginRight="15dp"
				         android:text="用  户  名"
				         android:textSize="25px" />
			         <EditText
			             android:id="@+id/homepage_editinfo_username"
				         android:layout_width="fill_parent"
				         android:layout_height="wrap_content"
				         android:padding="5dp"
				         android:background="@drawable/input_border" >
			         </EditText>
			     </LinearLayout>
			     
			     <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal"
			         android:layout_marginTop="16dp"
			         >
			         <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_marginRight="15dp"			         
				         android:text="性        别"
				         android:textSize="25px" />
			        
			         <RadioGroup 
			             android:id="@+id/homepage_editinfo_gender"
			             android:orientation="horizontal"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             >
			             <RadioButton 
			                 android:id="@+id/male"
			                 android:layout_width="wrap_content"
			                 android:layout_height="wrap_content"
			                 android:text="男"
			                 android:checked="true"/>
			             <RadioButton 
			                 android:id="@+id/female"
			                 android:layout_width="wrap_content"
			                 android:layout_height="wrap_content" 
			                 android:text="女"/>
			             </RadioGroup> 
			     </LinearLayout>
			     
			     <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal"
			         android:layout_marginTop="16dp" 
			         >
			         
			         <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_marginRight="15dp"
				         android:text="生        日"
				         android:textSize="25px" />
			         
			         <Spinner 
			             android:id="@+id/homepage_editinfo_year"   
				         android:layout_width="wrap_content"  
			             android:layout_height="35dp"
			             android:layout_marginLeft="0dp"
			             android:layout_marginRight="0dp"
			             android:padding="5dp"
				         android:background="@drawable/input_border"
			           />
			         <Spinner 
			             android:id="@+id/homepage_editinfo_month"   
				         android:layout_width="wrap_content"  
			             android:layout_height="35dp"
			             android:layout_marginLeft="15dp"
			        	 android:layout_marginRight="0dp"
			        	 android:padding="5dp"
				         android:background="@drawable/input_border"
			          />
			         <Spinner 
			             android:id="@+id/homepage_editinfo_day"   
				         android:layout_width="wrap_content"  
			             android:layout_height="35dp"
			             android:layout_marginLeft="15dp"
			        	 android:layout_marginRight="0dp"
			        	 android:padding="5dp"
				         android:background="@drawable/input_border"
			         />
			     </LinearLayout>
			   
			     <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal"
			         android:layout_marginTop="16dp" >
			         
			         <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_marginRight="10dp"
				         android:text="学号/工号"
				         android:textSize="25px" />
			         
			         <EditText
				         android:id="@+id/homepage_editinfo_stunumber"
				         android:layout_width="fill_parent"
				         android:layout_height="wrap_content"
				         android:padding="5dp"
				         android:background="@drawable/input_border">
			         </EditText>
			     </LinearLayout>
			     
			     <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal"
			         android:layout_marginTop="16dp" >
			         
			         <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="15dp"
				        android:text="分        组"
				        android:textSize="25px" />
			         <Spinner 
			            android:id="@+id/homepage_editinfo_group"   
			            android:layout_width="match_parent"  
			            android:layout_height="35dp"
			            android:padding="5dp"
				        android:background="@drawable/input_border"/>
			     </LinearLayout>  
			     <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal" 
			         android:layout_marginTop="16dp">
			         
			         <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_marginRight="15dp"
				         android:text="院        系"
				         android:textSize="25px" />		         
				     <Spinner 
				         android:id="@+id/homepage_editinfo_department"   
				         android:layout_width="match_parent"  
			             android:layout_height="35dp"
			             android:padding="5dp"
				         android:background="@drawable/input_border"/>
			     </LinearLayout>
			   <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal" 
			         android:layout_marginTop="16dp">
			         
			         <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_marginRight="15dp"
				         android:text="旧  密  码"
				         android:textSize="25px" />		         
				     <EditText 
				         android:id="@+id/homepage_editinfo_oldpassword"   
				         android:layout_width="match_parent"  
			             android:layout_height="35dp"
			             android:padding="5dp"
				         android:background="@drawable/input_border"/>
			     </LinearLayout>
			        <LinearLayout
			         android:layout_width="fill_parent"
			         android:layout_height="wrap_content"
			         android:orientation="horizontal" 
			         android:layout_marginTop="16dp">
			         
			         <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_marginRight="15dp"
				         android:text="新  密  码"
				         android:textSize="25px" />		         
				     <EditText 
				         android:id="@+id/homepage_editinfo_newpassword"   
				         android:layout_width="match_parent"  
			             android:layout_height="35dp"
			             android:padding="5dp"
				         android:background="@drawable/input_border"/>
			     </LinearLayout>
				 <Button
				     android:id="@+id/homepage_editinfo_confirm"
				     android:layout_width="match_parent"
				     android:layout_height="wrap_content"			        
				     android:layout_marginLeft="16dp"
				     android:layout_marginTop="16dp"
				     android:paddingLeft="80dp"
				     android:paddingRight="80dp"
				     android:paddingTop="10dp"
				     android:paddingBottom="10dp"
				     android:text="确定"
				     android:background="@drawable/button_bg"
				     android:textSize="20dp"
				     />		    
		</LinearLayout>
	</ScrollView>		    
</LinearLayout>